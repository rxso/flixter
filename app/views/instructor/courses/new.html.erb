<br />
<div class="booyah-box col-10 offset-1">
    <h1>Add a new course</h1>
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
        <%= f.input :title, as: :text, label: 'Course Title', error: 'Add Course Title', input_html: { maxlength: 60 } %>
        <%= f.input :description, as: :text, label: 'Course Description', error: 'Add Course Description', input_html: { maxlength: 200 }  %>
        <%= f.input :cost, error: 'Add Course Price', input_html: { maxlength: 8 } %>
        <%= f.input :image %>
        <br /> 
        <%= f.submit "Create", class: 'btn btn-success' %>
        <br />
    <% end %>
    <br />
</div>