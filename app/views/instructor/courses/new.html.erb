<br />
<div class="booyah-box col-10 offset-1">
    <h2>Add a new course</h2>
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
        <%= f.input :title, as: :text, label: 'Course Title', error: 'Title Cannot Be Blank', input_html: { maxlength: 60 } %>
        <%= f.input :description, as: :text, label: 'Course Description', error: 'Description Cannot Be Blank', input_html: { maxlength: 200 }  %>
        <%= f.input :cost, input_html: { maxlength: 8 } %>
        <br /> 
        <%= f.submit "Create", class: 'btn btn-success' %>
        <br />
    <% end %>
    <br />
</div>